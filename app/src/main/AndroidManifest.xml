<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tricktekno.tablayout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PhotosActivity" />
        <activity android:name=".SongsActivity" />
        <activity android:name=".VideosActivity" />
        <activity android:name=".AndroidTabLayoutActivity" />
        <!-- Search results activity -->


        <!-- Location found activity -->
        <!-- Permission: Allow Connect to Internet -->
        <uses-permission android:name="android.permission.INTERNET" />
        <!-- Permission: Writing to SDCard -->
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

        <activity android:name=".HelloActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ADTActivity"
            android:label="@string/title_activity_adt"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ADT2Activity"
            android:label="@string/title_activity_adt2"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>